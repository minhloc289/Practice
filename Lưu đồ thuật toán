int main(){
    int n;
    do {
        cin >> n;
        if (n < 1){
            cout << "Nhap lai";
        }
    } while (n < 1);
    float S = 1;
    
    for (int i = 1; i <= n; i++){
        S *= i;
    }
    cout << S;
    return 0;
}

#Bai10
#include<iostream>
#include<conio.h>
#include<math.h>
using namespace std;
int main()
{
    double x, n, result;
    cin >> x >> n;
    result = pow(x,n);
    cout << result;
    return 0;
}

