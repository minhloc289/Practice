int main(){
    int n;
    do {
        cin >> n;
        if (n < 1){
            cout << "Nhap lai";
        }
    } while (n < 1);
    float S = 0;
    
    for (int i = 0; i < n; i++){
        S = S + 1.0 / ((2*i) + 1);
    }
    cout << S;
    return 0;
}

#Bai 6
#include <iostream>

using namespace std;
int main(){
    int n;
    do {
        cin >> n;
        if (n < 1){
            cout << "Nhap lai";
        }
    } while (n < 1);
    float S = 0;
    
    for (int i = 1; i <= n; i++){
        S = S + 1.0 / (i*(i+1));
    }
    cout << S;
    return 0;
}

