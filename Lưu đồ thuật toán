int main(){
    int n;
    cin >> n;

    long S = 0;
    for (int i = 0; i <= n; i++){
        S += i * i;
    }
    cout << S;
    return 0;
    
}

#Bai3
#include <iostream>

using namespace std;
int main(){
    int n;
    do {
        cin >> n;
        if (n < 1){
            cout << "Nhap lai";
        }
    } while (n < 1);
    float S = 0;
    
    for (int i = 1; i <= n; i++){
        S = S + (1.0/i); // phải là 1.0
    }
    cout << S;
    return 0;
}

#Bai4
#include <iostream>

using namespace std;
int main(){
    int n;
    do {
        cin >> n;
        if (n < 1){
            cout << "Nhap lai";
        }
    } while (n < 1);
    float S = 0;
    
    for (int i = 1; i <= n; i++){
        S = S + 1.0 / (2*i);
    }
    cout << S;
    return 0;
}

#Bai 5
